generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// product model 
model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  image       String
  order       Int
  basePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Sizes[]
  extras      Extras[]
}

// sizes model
model Sizes {
  id        String       @id @default(cuid())
  name      ProductSizes
  price     Float
  Product   Product      @relation(fields: [productId], references: [id])
  productId String
}

// extras model 
model Extras {
  id        String           @id @default(cuid())
  name      ExtraIngredients
  price     Float
  Product   Product          @relation(fields: [productId], references: [id])
  productId String
}

// enums
enum ProductSizes {
  SMALL
  MEDIUM
  LARGE
}

enum ExtraIngredients {
  CHEESE
  BACON
  TOMATO
  ONION
  PEPPER
}
